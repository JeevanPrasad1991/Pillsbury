<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_header"
    android:orientation="vertical" >

    <!-- Include Header Bar -->

    <RelativeLayout
        android:id="@+id/mainpage_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/titletext_bg"
        android:padding="5sp" >

        <TextView
            android:id="@+id/mainpage_remembermetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Main Menu"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/geotag_title_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2798dc"
        android:paddingBottom="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="5sp" >

        <TextView
            android:id="@+id/geotag_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Store Visited"
            android:textColor="#e2e2e2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/salesthru_intellogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/back_btn_bg"
            android:onClick="onButtonClick"
            android:visibility="invisible" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geotag_title_header"
        android:clickable="@+id/radiobtn_yes"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClick"
            android:text="Yes"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onButtonClick"
            android:text="No"
            android:textColor="#000000" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/header"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/radioGroup1"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
         android:background="#2798dc"
         android:visibility="invisible"
            >

            <TextView
                android:id="@+id/mainpage_remembermetext"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Partner Profile"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".4"
  
            >

           
        </LinearLayout>
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:weightSum="1" 
            android:visibility="invisible">

            <TextView
                android:id="@+id/mainpage_remembermetext"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:layout_weight=".4"
                android:text="Partner Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/mainpage_remembermetext"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:paddingLeft="5dp"
                android:text="Partner Category"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/store_cat"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1" 
            android:visibility="invisible">

            <TextView
                android:id="@+id/mainpage_remembermetext"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:text="TAM"
                android:paddingLeft="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tam"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="invisible" >

            <TextView
              
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text=""
                android:paddingLeft="5dp"
                android:textSize="16sp" 
                android:visibility="invisible"/>

            <Button
                android:id="@+id/updateTam"
              
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="Update TAM"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:weightSum="100"
            android:orientation="horizontal"
         android:background="#2798dc"
         android:visibility="invisible"
            >

            <TextView
       
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=" Tam"
                android:layout_weight="25"
                android:textSize="16sp" />
            <TextView
          
                android:layout_width="0dp"
                     android:layout_weight="25"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=" Sales"
                android:textSize="16sp" />
            <TextView
              
                     android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=" Share"
                android:textSize="16sp" />
            <TextView
             
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                     android:layout_weight="25"
                android:gravity="center"
                android:text=" Territory "
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:weightSum="100"
            android:orientation="horizontal"
        
            >

            <TextView
                android:id="@+id/tamdata"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
          
                android:layout_weight="25"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/saless"
                android:layout_width="0dp"
                     android:layout_weight="25"
                android:layout_height="fill_parent"
                android:gravity="center"
                
                android:textSize="16sp" />
            <TextView
                android:id="@+id/sharee"
                     android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:gravity="center"
               
                android:textSize="16sp" />
            <TextView
                android:id="@+id/terriority"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                     android:layout_weight="25"
                android:gravity="center"
              
                android:textSize="16sp" />
        </LinearLayout>
        
        
    </LinearLayout>

</RelativeLayout>