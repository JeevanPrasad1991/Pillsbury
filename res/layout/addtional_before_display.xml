                        <LinearLayout
                            android:id="@+id/addtional_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:weightSum="40"
                            android:visibility="visible" >
                            
                 <LinearLayout
        android:id="@+id/storename_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" 
        android:padding="5sp" >

        <TextView
            android:id="@+id/posm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:background="#2798dc"
            android:text="Additional Display"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout> 
            
    
                                            
    <LinearLayout android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="17"
        android:weightSum="10"
        android:layout_marginBottom="2dp">
        
        <TextView android:id="@+id/facing"
            android:layout_height="match_parent"
            android:text="Category"
           android:gravity="center_vertical"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="5"/>
        
        <Spinner android:id="@+id/brand_name"
            android:layout_height="match_parent"
            android:layout_width="0dp"
              android:inputType="text"
              android:dropDownSelector="#ff9933"
            android:layout_weight="5">
           
        </Spinner>
        
       
    </LinearLayout>
    
                    
    <LinearLayout android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="17"
        android:weightSum="10"
        android:layout_marginBottom="2dp">
        
        <TextView android:id="@+id/facing"
            android:layout_height="match_parent"
            android:text="Element"
           	android:gravity="center_vertical"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="5"/>
        
        <Spinner android:id="@+id/display_name"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:dropDownSelector="#ff9933"
            android:layout_weight="5">
           
        </Spinner>
        
        
        
        
    </LinearLayout>
    
    
                    
    
    
        <LinearLayout android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="17"
        android:weightSum="10"
        android:layout_marginBottom="2dp">
        
        <TextView android:id="@+id/gg"
            android:layout_height="match_parent"
            android:text="Photo"
           android:gravity="center_vertical"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="5"/>
        
        <ImageView android:id="@+id/camera"
           	android:background="@drawable/camera_list"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="onButtonClick"
            android:layout_weight="2">
           
        </ImageView>
        
        <Button
	    android:id="@+id/refimage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="0dp"
	    android:layout_weight="1"
	    android:visibility="invisible"
	    android:text="Ref Image" />
    </LinearLayout>

            
<!--         </LinearLayout> -->
        
           
    

</LinearLayout>

                <LinearLayout android:id="@+id/savebtnLayout"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:weightSum="2" >
            
            <Button android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Save"
                android:background="#2798dc"
                android:layout_weight="2"
                />
          
            
        </LinearLayout>

                        
                        <LinearLayout android:id="@+id/list_layout" 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="95"
                            android:visibility="visible"
                            >
                            
                            <ListView android:id="@+id/lv"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                            ></ListView>
                        </LinearLayout>
</LinearLayout>