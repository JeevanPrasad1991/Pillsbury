<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
        android:id="@+id/storename_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
       android:orientation="vertical"
        android:padding="5sp" >






    <LinearLayout android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:layout_marginTop="2dp"
        android:weightSum="10"
        android:layout_marginBottom="2dp">

        <TextView android:id="@+id/facing"
            android:layout_height="match_parent"
            android:text="Category"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="5"/>

        <TextView android:id="@+id/brand_name"
            android:layout_height="match_parent"
            android:layout_width="0dp"
              android:inputType="text"
            android:textSize="15sp"

            android:layout_weight="5">

        </TextView>
    </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:weightSum="10" >

            <Button android:id="@+id/delete_btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Delete"
                android:layout_marginRight="3dp"
                android:textStyle="bold"
                android:background="#2798dc"
                android:layout_weight="10"
                />

        </LinearLayout>



        <LinearLayout android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10"

        android:layout_marginTop="15dp"
        android:weightSum="10"
        android:layout_marginBottom="5dp"
        tools:ignore="DuplicateIds">

        <TextView android:id="@+id/facing"
            android:layout_height="match_parent"
            android:text="Posm"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="5"
            tools:ignore="DuplicateIds" />

        <TextView android:id="@+id/display_name"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:layout_weight="5">

        </TextView>
    </LinearLayout>










<!--         </LinearLayout> -->




</LinearLayout>


</LinearLayout>
