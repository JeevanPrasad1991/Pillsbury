<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100">
    
    <LinearLayout
        android:id="@+id/belowme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2798dc"
        android:orientation="horizontal"
        android:layout_weight="14" >

        <TextView
            android:id="@+id/txt_idealFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:text="Performance Management"
            android:textSize="15sp"
            android:textStyle="italic" />
        
    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="12.5" >

        <TextView
            android:id="@+id/sku_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text=" Half-Monthly Target"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/monthly_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:layout_weight="5"
            android:ems="10"/>
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_weight="12.5" >

        <TextView
            android:id="@+id/daily"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="Daily Target"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daily_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:layout_weight="5"
            android:ems="10"/>
    </LinearLayout>
    
          <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="12.5" >

        <TextView
            android:id="@+id/mid"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="MTD Achievement"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/achieved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           
            android:text="MTD"
            android:layout_weight="8"
            android:ems="10"/>
    </LinearLayout>
    
            <LinearLayout
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="12.5" >

        <TextView
            android:id="@+id/pendind"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Pending Achievement to be done"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pendingAchivement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:layout_weight="8"
            android:ems="10"/>
    </LinearLayout>
    
                   <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="12.5" >

    </LinearLayout>
    
                          <LinearLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="12.5" >

      
    </LinearLayout>
    
                                 <LinearLayout
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="12.5" >

      
    </LinearLayout>

</LinearLayout>
