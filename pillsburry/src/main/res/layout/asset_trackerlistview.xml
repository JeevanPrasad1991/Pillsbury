    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="4">

        <!--     <TextView -->
        <!--         android:id="@+id/sku_name" -->
        <!--         android:layout_width="wrap_content" -->
        <!--         android:layout_height="wrap_content" -->
        <!--         android:text="Premium Gold Atta 5kg" -->
        <!--         android:textStyle="italic|bold" -->
        <!--         android:layout_gravity="left" /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/asset_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text=""
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/asset_avail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textOff="NO"
            android:textOn="YES" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="8">

        <TextView
            android:id="@+id/targetCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Reason"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reason"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ems="10"
            android:text=""></Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cameraLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="12">

        <TextView
            android:id="@+id/picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="Take a Photo"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/camera_list"
            android:ems="10">


        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="8">

        <TextView
            android:id="@+id/targetCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Target"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ems="10"
            android:text="">


        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirddj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="8">

        <TextView
            android:id="@+id/actualCountText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Actual"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/actualCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ems="10"
            android:inputType="number"
           android:maxLength="3">

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/remarkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/shelf_fm_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Remarks"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/remark_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"

            android:ems="10">

            <requestFocus />
        </EditText>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#2798dc" />


</LinearLayout>