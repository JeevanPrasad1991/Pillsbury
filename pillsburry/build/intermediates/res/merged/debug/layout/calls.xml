<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="100">
    
        <LinearLayout
        android:id="@+id/belowme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="#2798dc"
        android:orientation="horizontal"
        android:layout_weight="15" >

        <TextView
            android:id="@+id/txt_idealFor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_weight="16"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="Calls Tracker" />
        
    </LinearLayout>
    
        <LinearLayout
        android:id="@+id/belowmedd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#CCFFFF"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="15" >

    
        <TextView
            android:id="@+id/txt_idealFoaar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_weight="16"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="15sp"
            android:text="Calls between 12 noon to 3 p.m" />
        
    </LinearLayout>
    
          <LinearLayout
        android:id="@+id/second12to3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16"
        android:layout_weight="10" >

        <TextView
            android:id="@+id/sku_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Total Calls"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/total_calls123"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:inputType="number"
            android:layout_weight="8"
            android:ems="10"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/to123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="16" 
        android:layout_weight="10">
        
        <TextView
            android:id="@+id/secondtext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Productive Calls"
            android:textStyle="bold" />
        
        <EditText
            android:id="@+id/productive_calls123"
            android:layout_width="0dp"
                android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="8" >

            <requestFocus/>
        </EditText>
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/upload_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="horizontal">

         <Button
             android:id="@+id/upload_btn"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Upload" />
    
    </LinearLayout>
        
       <LinearLayout
        android:id="@+id/belowmeddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#CCFFFF"
        android:orientation="horizontal"
        android:weightSum="16" 
        android:layout_weight="15">

        <TextView
            android:id="@+id/txt_idealFoaard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_weight="16"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="15sp"
            android:text="Calls between 3 p.m to 9 p.m" />
        
    </LinearLayout>    
    
    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10" >

        <TextView
            android:id="@+id/sku_name36"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Total Calls"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/total_calls36"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                android:inputType="number"
            android:layout_weight="8"
            android:ems="10" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       	android:layout_weight="10" >
        
        <TextView
            android:id="@+id/secondtext3to6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Productive Calls"
            android:textStyle="bold" />
        
        <EditText
            android:id="@+id/productive_calls36"
            android:layout_width="0dp"
                android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="8" >

            <requestFocus/>
        </EditText>
    </LinearLayout>
      
     <LinearLayout
         android:id="@+id/fourth"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="16"
         android:layout_weight="10" >
        
        <TextView
            android:id="@+id/thirdtext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="POS sale"
            android:textStyle="bold" />
        
        <EditText
            android:id="@+id/pos_Sale"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="8" >

            <requestFocus/>
        </EditText>
    </LinearLayout>
    
     
     <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="horizontal">
        
         <Button
             android:id="@+id/save_btn"
             android:layout_width="match_parent"
             android:enabled="true"
             android:layout_height="wrap_content"
             android:text="Save" />
    </LinearLayout>
    
    </LinearLayout>
     
   
    
	
	
     

    
    
      



          

