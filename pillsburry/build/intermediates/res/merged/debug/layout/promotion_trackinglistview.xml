    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:id="@+id/sku_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Gold Atta 5kg"
            android:visibility="gone"
            android:textStyle="italic|bold" />
        android:layout_gravity="left"
    </LinearLayout>

    <LinearLayout
        android:id="@+id/six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        tools:ignore="DuplicateIds">

        <TextView
            android:id="@+id/promotion_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text=""
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/promotion_avail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:checked="false"
            android:textOff="NO"
            android:textOn="YES" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cameraLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="12">

        <TextView
            android:id="@+id/picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="Take a Photo"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/camera_list"
            android:ems="10">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        tools:ignore="DuplicateIds">

        <TextView
            android:id="@+id/des"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="Description"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:visibility="gone"
            android:text="promotion Description"
            android:textSize="14dp"


            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="8">

        <TextView
            android:id="@+id/targetCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Reason"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reason"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ems="10"
            android:text="">


        </Spinner>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/remarkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="8">

        <TextView
            android:id="@+id/shelf_fm_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="Remarks"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/remark_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ems="10">

            <requestFocus />
        </EditText>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#2798dc" />


</LinearLayout>